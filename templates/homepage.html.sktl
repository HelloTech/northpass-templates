  <section class="home__skills p-top-5 p-bottom-5 p-relative">
    <img src="https://sendgrid.com/wp-content/uploads/2018/07/hand-illustration.svg" class="home__skills__illustration"/>
    <div class="row p-bottom-4 p-top-8 p-relative">
      <header class="column t-a-center small-12">
        <h2 class="is-size-45">
          Ready to step up your sending skills?
        </h2>
        <p>
          Our bite-size courses take as little as 10 minutes to complete and can be accessed on your mobile device too!
        </p>
      </header>
    </div>
    <div class="row p-relative">
      <div class="column small-12 medium-8">
        <div class="row">
          <div class="column small-12">
            <div class="floating-tile floating-tile--blue-border seafoam-dot">
              <div class="resource-tile__copy">
                <h4 class="is-size-20">Find what’s right for you.</h4>
                <p>
                  Depending on your expertise level, find and pick what’s right for you. For more guidance, you can follow learning paths in order to master a topic from A to Z.
                </p>
              </div>
            </div>
          </div>
           <div class="column small-12">
            <div class="floating-tile floating-tile--blue-border orange-dot">
              <div class="resource-tile__copy">
                <h4 class="is-size-20">A little can go a long way.</h4>
                <p>
                  We know you have a lot to do. We’ve designed courses to make it easy to learn a little or lot — you get to choose.
                </p>
              </div>
            </div>
          </div>
          <div class="column small-12">
            <div class="floating-tile floating-tile--blue-border screample-dot">
              <div class="resource-tile__copy">
                <h4 class="is-size-20">Learn by doing.</h4>
                <p>
                  We’ve created practical scenarios and examples so you can learn by doing and get feedback on what works and what doesn’t.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="homepage__featured p-top-bottom">
    <div class="row align-middle align-center t-a-center">
      <div class="column small-12">
        <h2 class="is-size-45 m-top-4 m-bottom-5">
          {{ homepage.featured_courses_headline }}
        </h2>
        {{ if homepage.featured_courses_subheadline }}
          <p>{{ homepage.featured_courses_subheadline }}</p>
        {{ end }}
      </div>
    </div>
    {{ if homepage.published_featured_courses }}
      <div class="row">
        <div class="column small-12 resource-tiles">
          {{ homepage.published_featured_courses.each 'course' }}


            <div class="resource-tile resource-tile--featured floating-tile m-bottom-tall resource-tile--academy">

              {{ if current_person.enrolled_in_course?(course) }}
                <a href="{{ course.cover_path }}" class="main-link">
                  <div class="resource-tile__thumbnail">
                    <img src="{{ course.list_image_url }}" class="uk-responsive-width uk-width-1-1">
                  </div>
                  <div class="resource-tile__copy">
                      <h3 class="m-bottom-xxsmall">{{ course.name }}</h3>
                      <p class="m-bottom-xxsmall">
                          By: {{ course.instructor_names }} <span>|</span>
                          {{ if current_person.enrolled_in_course?(course) }}
                            {{ course.progress_text(current_person) }}
                          {{ end }}
                      </p>

                      {{ if current_school.filtering_enabled? }}
                        <p class="m-bottom-xxsmall">
                          {{ course.course_category_names }}
                        </p>
                      {{ end }}

                      {{ if course.ribbon }}
                        <div class="badge">
                          {{ course.ribbon }}
                        </div>
                      {{ end }}

                      <p class="blue-text-80">{{ course.go_to_label }}</p>


                  </div>
                </a>

              {{ else }}
                <a href="{{ course.details_path }}" class="main-link">
                  <div class="resource-tile__thumbnail">
                    <img src="{{ course.list_image_url }}" class="uk-responsive-width uk-width-1-1">
                  </div>
                  <div class="resource-tile__copy">
                      <h3 class="m-bottom-xxsmall">{{ course.name }}</h3>
                      <p class="m-bottom-xxsmall">
                          By: {{ course.instructor_names }} <span>|</span>
                          {{ if current_person.enrolled_in_course?(course) }}
                            {{ course.progress_text(current_person) }}
                          {{ end }}
                      </p>

                      {{ if current_school.filtering_enabled? }}
                        <p class="m-bottom-xxsmall">
                          {{ course.course_category_names }}
                        </p>
                      {{ end }}

                      {{ if course.ribbon }}
                        <div class="badge">
                          {{ course.ribbon }}
                        </div>
                      {{ end }}

                      {{ if app('commerce').active? }}
                        {{ course.formatted_price }}
                      {{ else }}
                        <p class="blue-text-80">{{ course.go_to_label }}</p>
                      {{ end }}

                  </div>
                </a>

              {{ end }}

            </div>


          {{ end }}
        </div>
      </div>
    {{ end }}
  </section>

  <section class="signup-banner">
    <div class="row p-top-bottom align-middle align-center t-a-center">
      <div class="column small-12">
        <h2>
          Ready to step up your sending skills?
        </h2>
      </div>
      <div class="column small-12">
        <a href="#" class="btn btn-on-dark btn-secondary">
            Sign Up
          </a>
      </div>
    </div>
  </section>


